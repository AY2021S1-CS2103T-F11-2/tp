<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.FlowPane?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS" minHeight="40">
        <children>
            <Label fx:id="id" styleClass="cell_small_label" GridPane.columnIndex="0" />
            <Label fx:id="title" text="\$first" styleClass="cell_small_label" wrapText="true" GridPane.columnIndex="1" />
            <Label fx:id="deadline" text="\$deadline" styleClass="cell_small_label" wrapText="true"
                   GridPane.columnIndex="2"/>
            <FlowPane fx:id="tags" GridPane.columnIndex="3">
                <Label fx:id="isCompleted" text="\$isCompleted" />
                <Label fx:id="milestone" text="\$milestone" />
            </FlowPane>
        </children>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="5.0" minWidth="10" prefWidth="5"/>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="55.0" minWidth="10" prefWidth="55"/>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="30.0" minWidth="10" prefWidth="30"/>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="40.0" minWidth="40" prefWidth="40"/>
        </columnConstraints>
    </GridPane>
</HBox>
