<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane minHeight="40">
        <children>
          <Label text="#" styleClass="cell_big_label" GridPane.columnIndex="0" />
          <Label text="Name" styleClass="cell_big_label" wrapText="true" GridPane.columnIndex="1" />
          <Label text="Email" styleClass="cell_big_label" wrapText="true" GridPane.columnIndex="2" />
          <Label text="Role" styleClass="cell_big_label" wrapText="true" GridPane.columnIndex="3" />
        </children>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" percentWidth="5.0" minWidth="10" prefWidth="5"/>
          <ColumnConstraints hgrow="SOMETIMES" percentWidth="35.0" minWidth="10" prefWidth="35"/>
          <ColumnConstraints hgrow="SOMETIMES" percentWidth="40.0" minWidth="10" prefWidth="40"/>
          <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" minWidth="30" prefWidth="20"/>
        </columnConstraints>
    </GridPane>
    <ListView fx:id="personListView" VBox.vgrow="ALWAYS" />
</VBox>
