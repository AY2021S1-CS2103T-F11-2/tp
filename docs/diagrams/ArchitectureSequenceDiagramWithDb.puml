@startuml
!include style.puml

Actor User as user USER_COLOR
Participant ":UI" as ui UI_COLOR
Participant ":LogicMeeting" as logic LOGIC_COLOR
Participant ":ModelMeeting" as modelPerson MODEL_COLOR
Participant ":StorageMeeting" as storageMeeting STORAGE_COLOR
Participant ":Calendar" as calendar CALENDAR_COLOR

user -[USER_COLOR]> ui : "delete 1"
activate ui UI_COLOR

ui -[UI_COLOR]> logic : execute("delete 1")
activate logic LOGIC_COLOR

logic -[LOGIC_COLOR]> modelPerson : deleteMeeting(m)
activate modelPerson MODEL_COLOR

modelPerson -[MODEL_COLOR]-> logic
deactivate modelPerson

logic -[LOGIC_COLOR]> storageMeeting : saveMeetingBook(meetingBook)
activate storageMeeting STORAGE_COLOR

storageMeeting -[STORAGE_COLOR]> storageMeeting : Save to file
activate storageMeeting STORAGE_COLOR_T1
storageMeeting --[STORAGE_COLOR]> storageMeeting
deactivate storageMeeting

storageMeeting --[STORAGE_COLOR]> logic
deactivate storageMeeting

logic --[LOGIC_COLOR]> ui
deactivate logic

ui--[UI_COLOR]> calendar : updateCalendarList()
activate calendar CALENDAR_COLOR

calendar --[CALENDAR_COLOR]> ui
deactivate calendar

ui--[UI_COLOR]> user
deactivate ui
@enduml
