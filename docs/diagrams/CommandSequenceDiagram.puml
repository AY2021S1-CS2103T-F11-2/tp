@startuml
!include style.puml

scale 1.5

skinparam BackgroundColor LOGIC_COLOR_T1
skinparam ArrowFontColor #FFFFF

box Logic LOGIC_COLOR
participant ":ABCLogicManager" as ABCLogicManager LOGIC_COLOR
participant ":ABCBookParser" as ABCBookParser LOGIC_COLOR
participant ":XYZCommandParser" as XYZCommandParser LOGIC_COLOR
participant "d:XYZCommand" as XYZCommand LOGIC_COLOR
participant ":CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":ABCModel" as ABCModel MODEL_COLOR
end box

[-> ABCLogicManager : execute("XYZ args")
activate ABCLogicManager

ABCLogicManager -> ABCBookParser : parseCommand("XYZ args")
activate ABCBookParser

create XYZCommandParser
ABCBookParser -> XYZCommandParser
activate XYZCommandParser

XYZCommandParser --> ABCBookParser
deactivate XYZCommandParser

ABCBookParser -> XYZCommandParser : parse("args")
activate XYZCommandParser

create XYZCommand
XYZCommandParser -> XYZCommand
activate XYZCommand

XYZCommand --> XYZCommandParser : command
deactivate XYZCommand

XYZCommandParser --> ABCBookParser : command
deactivate XYZCommandParser
'Hidden arrow to position the destroy marker below the end of the activation bar.
XYZCommandParser -[hidden]-> ABCBookParser
destroy XYZCommandParser

ABCBookParser --> ABCLogicManager : command
deactivate ABCBookParser

ABCLogicManager -> XYZCommand : execute()
activate XYZCommand

skinparam sequenceGroupBackgroundColor yellow
skinparam sequenceGroupBorderColor blue

opt parsers that affect models

    XYZCommand -> ABCModel
    activate ABCModel

    ABCModel --> XYZCommand
    deactivate ABCModel

    create CommandResult
    XYZCommand -> CommandResult
    activate CommandResult

    CommandResult --> XYZCommand
    deactivate CommandResult
end

XYZCommand --> ABCLogicManager : result
deactivate XYZCommand

[<--ABCLogicManager
deactivate ABCLogicManager
@enduml
